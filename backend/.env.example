# Youth Sports Budget - Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
# For Railway: Use the DATABASE_URL provided by Railway PostgreSQL plugin
# For local development: Use SQLite (default) or PostgreSQL
DATABASE_URL=sqlite:///./youth_sports_budget.db
# Example PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/youthsportsbudget

# Security
# CRITICAL: Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# CORS Configuration
# Comma-separated list of allowed origins (frontend URLs)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Authentication (Optional)
# Set to 'true' to require authentication for all endpoints
REQUIRE_AUTH=false

# Application Settings
PORT=8000
